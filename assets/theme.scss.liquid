.mini-cart table {
	width: 100%;
}

.mini-cart-btn, .mini-cart-item-count {
	cursor: pointer;
}

.mini-cart-btn {
	width: 2.45em;

	@include media-query($medium-up) {
		width: initial;
		width: auto;
	}
}
.mini-cart-total {
	color: grey;
	text-align: right;
	border-top: 0.01em solid;
	margin: -0.8em 0;
