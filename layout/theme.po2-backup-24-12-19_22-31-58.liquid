{%- comment %}<locksmith:8325>{% endcomment -%}
  {%- include 'locksmith' -%}
{%- comment %}</locksmith:8325>{% endcomment -%}

<!doctype html>
<!--[if IE 9]> <html class="ie9 no-js supports-no-cookies" lang="{{ shop.locale }}"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js supports-no-cookies" lang="{{ shop.locale }}"> <!--<![endif]-->
<head>
  {{ locksmith_initializations }}
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_primary }}">
  <link rel="canonical" href="{{ canonical_url }}">

  {% if settings.favicon != blank %}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
  {% endif %}

  {% capture seo_title %}
    {{ page_title }}
    {% if current_tags %}
      {%- assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags -}}
    {% endif %}
    {% if current_page != 1 %}
      &ndash; {{ 'general.meta.page' | t: page: current_page }}
    {% endif %}
    {% unless page_title contains shop.name %}
      &ndash; {{ shop.name }}
    {% endunless %}
  {% endcapture %}
  <title>{{ seo_title }}</title>

  {% if page_description %}
    {%- comment %}<locksmith:fa03>{% endcomment -%}
      {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta name="description" content="{{ page_description | escape }}">{% endif -%}
      {%- comment %}original: <meta name="description" content="{{ page_description | escape }}">{%- endcomment %}
    {%- comment %}</locksmith:fa03>{% endcomment -%}
  {% endif %}

  {% include 'social-meta-tags' %}

  {{ 'theme.scss.css' | asset_url | stylesheet_tag }}

  {% if settings.search_console != blank %}
    {% if template.name == 'index' %}
    {{ settings.search_console }}
    {% endif %}
  {% endif %}

  <!-- Require jQuery for mobile menu and other scripts -->
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

  <script>
    document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    {% if template.suffix == "pre-order" %}
      window.theme = {
        strings: {
          addToCart: {{ 'Pre-order' | json }},
          soldOut: {{ 'products.product.sold_out' | t | json }},
          unavailable: {{ 'products.product.unavailable' | t | json }}
        },
        moneyFormat: {{ shop.money_format | json }}
      };
    {% else %}
      window.theme = {
        strings: {
          addToCart: {{ 'products.product.add_to_cart' | t | json }},
          soldOut: {{ 'products.product.sold_out' | t | json }},
          unavailable: {{ 'products.product.unavailable' | t | json }}
        },
        moneyFormat: {{ shop.money_format | json }}
      };
    {% endif %}
  </script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  {% if template.directory == 'customers' %}
    <!--[if (gt IE 9)|!(IE)]><!--><script src="{{ 'shopify_common.js' | shopify_asset_url }}" defer="defer"></script><!--<![endif]-->
    <!--[if lte IE 9]><script src="{{ 'shopify_common.js' | shopify_asset_url }}"></script><![endif]-->
  {% endif %}

  <!--[if (gt IE 9)|!(IE)]><!--><script src="{{ 'vendor.js' | asset_url }}" defer="defer"></script><!--<![endif]-->
  <!--[if lt IE 9]><script src="{{ 'vendor.js' | asset_url }}"></script><![endif]-->

  <!--[if (gt IE 9)|!(IE)]><!--><script src="{{ 'theme.js' | asset_url }}" defer="defer"></script><!--<![endif]-->
  <!--[if lt IE 9]><script src="{{ 'theme.js' | asset_url }}"></script><![endif]-->

  {{ content_for_header }}

  {% include 'judgeme_core' %}

  {% if template == 'collection' %}
  {% section 'filter-menu-settings' %}
  {% endif %}

{% include 'wsg-header' %}
  <script src="https://cdn-widgetsrepository.yotpo.com/v1/loader/w6RYdbKD3lpNY9D2y8cJ9A" async></script>
</head>

<body id="{{ page_title | handle }}" class="template-{{ template.name | handle }}">
  
  {% include 'ie-modal' %}

  <a class="in-page-link visually-hidden skip-link" href="#MainContent">{{ 'general.accessibility.skip_to_content' | t }}</a>

  {% section 'header' %}

  <main role="main" id="MainContent"{% unless template contains 'product' or template == 'index' or page.handle == 'about-us' or page.handle == 'contact-us' %} class="page-width"{% endunless %}>
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}

  {% if template == 'collection' %}
  <script>
  Shopify.queryParams = {};
  if (location.search.length) {
    for (var aKeyValue, i = 0, aCouples = location.search.substr(1).split('&'); i < aCouples.length; i++) {
      aKeyValue = aCouples[i].split('=');
      if (aKeyValue.length > 1) {
        Shopify.queryParams[decodeURIComponent(aKeyValue[0])] = decodeURIComponent(aKeyValue[1]);
      }
    }
  }
  jQuery('#sort-by')
    .val('{{ collection.sort_by | default: collection.default_sort_by | escape }}')
    .bind('change', function() {
      Shopify.queryParams.sort_by = jQuery(this).val();
      location.search = jQuery.param(Shopify.queryParams).replace(/\+/g, '%20');
    });
  </script>
  {% endif %}

  <script async type="text/javascript" src="https://static.klaviyo.com/onsite/js/klaviyo.js?company_id=N7JGtQ"></script>
  
{% include 'spurit_po2_theme_snippet' %}
<style>
  .spurit-po-wrapper{
    width: 76%;

  }
  .design-pre-order-template-wrapper{
    width: 100%;
  }
  .design-pre-order-template-wrapper button {
    width: 100%;
    margin-left: 20px;
  }

  .design-pre-order-template-wrapper button>span{
    background-color: black !important;
    color: white;
  }

  @media only screen and (max-width: 749px) {
    .spurit-po-wrapper{
      width: 100%;
      margin-left: 0;
      margin-top: 20px;
    }
    .design-pre-order-template-wrapper{
      width: 100%;
      margin-left: 0;
    }
    .design-pre-order-template-wrapper button {
      width: 100%;
      margin-left: 0;
    }
  }
</style>
</body>
</html>