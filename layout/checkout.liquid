<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}

    <!-- Global site tag (gtag.js) - Google Ads: 852770528 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-852770528"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'AW-852770528');
    </script>
  </head>
  <body>
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}

    <script type="text/javascript">
      (function($) {
        $(document).on("page:load", function() {
          {% for item in checkout.line_items %}
            {% if item.product.metafields.sale.final_sale or item.variant.metafields.sale.final_sale %}
              $(document).find('[data-product-id="'+{{ item.product.id }}+'"] .product__description').append('<span class="product__description__property order-summary__small-text">Final Sale</span>');
            {% endif %}
          {% endfor %}
        });
      })(Checkout.$);
    </script>

    {% include 'smsbump_checkout_marketing_subscription' %}

    <script src="https://cdn-widgetsrepository.yotpo.com/v1/loader/w6RYdbKD3lpNY9D2y8cJ9A" async></script>
    <div class="yotpo-widget-instance" data-yotpo-instance-id="136014" reload-page-after-redeem="true"></div>

    <!-- LOYALTY CODE START POST CHECKOUT -->
    <script src="https://cdn-widgetsrepository.yotpo.com/v1/loader/w6RYdbKD3lpNY9D2y8cJ9A" async></script>
    <!-- Initial CSS to hide the module -->
    <style type="text/css">
        .yotpo-checkout-hide {
            display: none;
        }
    </style>
    <!-- module inside container -->
    <div class="yotpo-refer-popup-container yotpo-checkout-hide">
    <div class="yotpo-widget-instance" data-yotpo-instance-id="140327"></div>
    </div>
    <!-- JS to handle module initiation -->
    <script type="text/javascript">
        window.location.href.indexOf("orders") !== -1
            ? document
                  .querySelector(".yotpo-checkout-hide")
                  .classList.remove("yotpo-checkout-hide")
            : "";
    </script>
    <!-- LOYALTY CODE END -->
  </body>
</html>
