<script>
  window.monogramProperties = {
    {% for block in section.blocks %}
      "{{ block.settings.heading }}": {
        "include_color": {{ block.settings.include_color_name }},
        "include_font": {{ block.settings.include_font_name }},
        {% for i in (1..4) %}
          {% assign front_text_key = "front_line_" | append: i %}
          {% assign back_text_key = "back_line_" | append: i %}
          "{{ front_text_key }}": "{{ block.settings[front_text_key] }}",
          "{{ back_text_key }}": "{{ block.settings[back_text_key] }}",
        {% endfor %}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  }

  console.log(window.monogramProperties)
</script>
