{% if product.metafields.custom_fields["bundled_product"] != blank %}
  <div class="custom-field custom-field__bundled-product custom-field__type--checkbox">
    <h3 class="custom-field--title">Bundled Product</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["bundled_product"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}